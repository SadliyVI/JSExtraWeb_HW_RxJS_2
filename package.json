{
    "name": "message-widget",
    "version": "1.0.0",
    "description": "A simple message widget using RxJS and Webpack",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "start:frontend": "webpack serve --config webpack.dev.js",
        "start:backend": "node ./src/api/server.cjs",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "build": "webpack --config webpack.prod.js"
    },
    "author": "SadliyVI",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.6",
        "express": "^5.2.1",
        "faker": "^5.5.3",
        "rxjs": "^7.8.0"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "css-loader": "^7.1.3",
        "dotenv-webpack": "^8.1.0",
        "html-webpack-plugin": "^5.6.3",
        "style-loader": "^4.0.0",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4",
        "webpack-merge": "^6.0.1"
    }
}
